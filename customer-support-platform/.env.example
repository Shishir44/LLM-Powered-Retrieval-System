# Environment Configuration

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Vector Database Configuration (choose one)
VECTOR_STORE_TYPE=pinecone  # pinecone, weaviate, chroma
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp-free
PINECONE_INDEX_NAME=customer-support-kb

# Weaviate Configuration (alternative)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_api_key

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=customer_support
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Message Queue Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=customer-support

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Gateway Configuration
API_GATEWAY_HOST=0.0.0.0
API_GATEWAY_PORT=8080
API_GATEWAY_WORKERS=4

# Service Configuration
CONVERSATION_SERVICE_URL=http://localhost:8001
KNOWLEDGE_BASE_SERVICE_URL=http://localhost:8002
NLP_SERVICE_URL=http://localhost:8003
INTEGRATION_SERVICE_URL=http://localhost:8004
ANALYTICS_SERVICE_URL=http://localhost:8005

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/customer-support.log

# Security Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Feature Flags
ENABLE_VOICE_PROCESSING=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_ANALYTICS=true
ENABLE_AUDIT_LOGGING=true

# Development Configuration
DEBUG=false
TESTING=false
DEVELOPMENT=true